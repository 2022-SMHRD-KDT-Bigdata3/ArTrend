<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="LikesMapper">
   <!-- namespace : mapper 구별 / id : 각 sql 구별 -->
   
   <select id="likeSelect" parameterType="String" resultType="LikesVO">
      <!-- 좋아요 게시글 번호 = 게시글 번호 / 그 게시글 작성한 유저 이메일 = 로그인 정보 이메일과 같은 것 -->
     select * from likes l join boards b on l.board_num = b.board_num where b.user_email = #{user_email}
     order by like_num desc
   </select>
   
</mapper>